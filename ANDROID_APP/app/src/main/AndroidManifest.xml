<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codes.reed.dev.buzz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/buzz_icon"
        android:roundIcon="@mipmap/buzz_icon_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="codes.reed.dev.buzz.TimerActivity"
            android:exported="true" />
        <activity
            android:name="codes.reed.dev.buzz.CodeInput"
            android:exported="true"></activity>
        <activity
            android:name="codes.reed.dev.buzz.BaseActivity"
            android:exported="true" />
        <activity
            android:name="codes.reed.dev.buzz.LandingPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="codes.reed.dev.buzz.Settings"
            android:exported="true"
            android:label="@string/title_activity_settings" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>